set -e
set -o errtrace

. @osdir@/common.sh

IMAGE_DIR=$(mktemp -d)
add_cleanup rmdir "$IMAGE_DIR"

cd "$IMAGE_DIR"

IMAGE=$(basename "$HELPER_URL")
echo "Downloading helper image: \`$IMAGE'..." >&2
$CURL -O -L -f "$HELPER_URL"
add_cleanup rm -f "$IMAGE_DIR/$IMAGE"

cd "$HELPER_DIR"

echo "Extracting helper image:"
tar -xvf "$IMAGE_DIR/$IMAGE"

exit 0

